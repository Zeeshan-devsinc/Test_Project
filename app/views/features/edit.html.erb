<%= link_to 'Back', plan_path(@feature.plan), class: "btn btn-outline-secondary" %>

<h1>Edit Feature</h1>

<%= form_for :feature, url: feature_path, method: :put do |form| %>
  <% if @feature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feature.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% @feature.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :code %><br>
    <%= form.text_field :code %><br>
  </div>

  <div class="field">
    <%= form.label :unit_price %><br>
    <%= form.number_field :unit_price %>
  </div>

  <div class="field">
    <%= form.label :max_unit_limit %><br>
    <%= form.number_field :max_unit_limit %>
  </div>




  <div class="actions" >
    <%= form.submit 'Edit Feature' %>
  </div>


  
<% end %>

<div class="card">
  <div class="card-header">
    <h2 class="card-title d-flex justify-content-between">
      <span>Plans</span>
      <%= link_to 'Create New Plan',  new_plan_path(current_user), class: 'btn btn-primary'%>
    </h2>
  </div>
  <div class="card-body">
    <div>
      <% @plans.each do |plan| %>
        <div class="plan">
          <div>
            <h5><%= plan.name %></h5>
            $<%= plan.monthly_fee %>
          </div>
          <div>
            <%= link_to 'Add Features', new_plan_feature_path(plan), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Show', plan_path(plan), class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_plan_path(plan), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Delete', plan_path(plan), method: :delete, class: 'btn btn-danger btn-sm'%>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>
<hr>
<div class="card">
  <div class="card-header">
    <h2 class="card-title d-flex justify-content-between">
      <span>Buyers</span>
    </h2>
  </div>
  <div class="card-body">
    <div>
      <% @users.each do |user| %>
        <div class="plan">
          <div>
            <h5><%= user.name %></h5>
            <b>Email: </b><%= user.email %><br />
            <b>Billing Day: </b><%= user.billing_day %><br />
          </div>
          <div>
            <%= link_to 'View Subscriptions', user_subscriptions_path(user), class: 'btn btn-info btn-sm' %>
            <%# <%= link_to 'Delete', cancel_user_registration_path(), method: :delete, class: 'btn btn-danger btn-sm'%>
            <%= link_to "Delete", admin_destroy_user_path(user), method: :delete,class: 'btn btn-danger btn-sm', data: { confirm: "You sure?" } %>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>
